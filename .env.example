# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# Secret key for Flask sessions (generate with: python -c "import os; print(os.urandom(24).hex())")
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma-separated, or * for all in development)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Spotify API (optional - for artist images)
SPOTIPY_CLIENT_ID=your_spotify_client_id
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret

# Port (usually set by hosting platform)
PORT=5001
